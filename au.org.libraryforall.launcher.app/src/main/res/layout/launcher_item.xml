<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="112dp">

  <ImageView
    android:id="@+id/launcherAppIcon"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/launcherAppTitle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:text="Placeholder"
    android:textSize="18sp"
    android:textStyle="bold"
    android:maxLines="1"
    android:ellipsize="end"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/launcherAppIcon"
    app:layout_constraintTop_toTopOf="@+id/launcherAppIcon" />

  <TextView
    android:id="@+id/launcherAppPackageId"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:text="Package ID"
    android:textSize="12sp"
    android:fontFamily="monospace"
    app:layout_constraintBottom_toBottomOf="@+id/launcherAppIcon"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/launcherAppIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>